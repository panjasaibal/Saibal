

<Calculator_Grid>:

    id:calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    GridLayout:
        cols:1
        TextInput:
            id: entry
            font_size: 32
            multiline : False

    GridLayout:

        cols:4
        spacing: 10
        Button:
            text: "7"
            on_press: entry.text += self.text

        Button:
            text: "8"
            on_press: entry.text += self.text

        Button:
            text: "9"
            on_press: entry.text += self.text


        Button:
            text: "+"
            on_press: entry.text += self.text

    GridLayout:
        spacing: 10
        cols:4
        Button:
            text: "4"
            on_press: entry.text += self.text
        Button:
            text: "5"
            on_press: entry.text += self.text
        Button:
            text: "6"
            on_press: entry.text += self.text

        Button:
            text: "-"
            on_press: entry.text += self.text

    GridLayout:
        spacing: 10
        cols:4
        Button:
            text: "1"
            on_press: entry.text += self.text
        Button:
            text: "2"
            on_press: entry.text += self.text
        Button:
            text: "3"
            on_press: entry.text += self.text

        Button:
            text: "*"
            on_press: entry.text += self.text
    GridLayout:
        spacing: 10
        cols: 4
        Button:
            text: "AC"
            on_press: entry.text = ""
        Button:
            text: "0"
            on_press: entry.text += self.text
        Button:
            text: "="
            on_press: calculator.calculate(entry.text)

        Button:
            text: "/"
            on_press: entry.text += self.text